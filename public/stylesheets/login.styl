input
  background white
  border 1px solid #BDBDBD
  height 30px
  width 80%
  font-size 200%
  padding 0px 5px 0px 5px
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px
  font-family 'Cabin Condensed', sans-serif
  color #585858

input:focus
  outline: none;
  box-shadow 0px 0px 10px #FBFBEF

#wrapper
  width 100%
  height auto
  text-align left
  margin-left auto
  margin-right auto

#panelBox
  width 40%
  height 370px
  text-align left
  margin-top 110px
  margin-left auto
  margin-right auto
  background white
  padding 20px
  -webkit-border-radius 20px
  -moz-border-radius 20px
  border-radius 20px
  background rgb(0, 0, 0)
  background rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 50px #848484
  border 1px solid
  display none
  text-align left
  font-family 'Courgette'
  font-size 130%
  color #FFFFFF
  
#panelBox button 
  background white
  border 1px solid #BDBDBD
  font-size 150%
  height 32px
  margin 10px 0px 0px 0px
  padding 3px 3px 3px 3px
  border-radius 15px
  width 100px
  font-family 'Cabin Condensed', sans-serif
  color #585858
  
#panelBox button:active
  background #F5F6CE

#panelBox button:hover
  box-shadow 0px 0px 10px #FBFBEF

#logo 
  float left
  width 100%
  height 160px
  text-align center

#loginBetaBox
  float left
  position relative
  width 100%
  padding-top 30px
  margin 0px 0px 0px 50px

#beta
  width 40%
  height auto
  margin-top 20px
  text-align left
  margin-left auto
  margin-right auto
  background white
  padding 20px
  -webkit-border-radius 20px
  -moz-border-radius 20px
  border-radius 20px
  background rgb(0, 0, 0)
  background rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 50px #848484
  border 1px solid
  display none
  font-family 'Courgette'
  font-size 100%
  color #FFFFFF

#beta button 
  background white
  border 1px solid #BDBDBD
  font-size 160%
  height 32px
  margin 0px 0px 0px 5px
  padding 3px 3px 3px 3px
  border-radius 5px
  font-family 'Cabin Condensed', sans-serif
  color #585858
  vertical-align middle

#beta button:active
  background #F5F6CE
 
#beta button:hover
  box-shadow 0px 0px 10px #FBFBEF

#beta input
  width 85%
  vertical-align middle
  color #585858
  font-family 'Cabin Condensed', sans-serif
