input
  background white
  border 1px solid #BDBDBD
  height 30px
  width 80%
  font-size 200%
  padding 0px 5px 0px 5px
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px

input:focus
  outline: none;
  border 1px solid #3B240B

#wrapper
  width 100%
  height auto
  text-align left
  margin-left auto
  margin-right auto

#panelBox
  width 40%
  height 370px
  text-align left
  margin-top 110px
  margin-left auto
  margin-right auto
  background white
  padding 20px
  -webkit-border-radius 20px
  -moz-border-radius 20px
  border-radius 20px
  background rgb(0, 0, 0)
  background rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 10px #FBFBEF
  display none
  text-align center
  
#panelBox button 
  background white
  border 1px solid #BDBDBD
  font-size 200%
  height 32px
  margin 10px 0px 0px 0px
  padding 3px 3px 3px 3px
  border-radius 5px
  width 100px
  
#panelBox button:active
  background #F5F6CE

#panelBox button:hover
  box-shadow 0px 0px 10px #FBFBEF

#logo 
  float left
  width 100%
  height 160px
  text-align center

#loginBetaBox
  float left
  position relative
  width 100%
  padding-top 30px

#beta
  width 40%
  height auto
  margin-top 20px
  text-align left
  margin-left auto
  margin-right auto
  background white
  padding 20px
  -webkit-border-radius 20px
  -moz-border-radius 20px
  border-radius 20px
  background rgb(0, 0, 0)
  background rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 10px #FBFBEF
  display none

#beta button 
  background white
  border 1px solid #BDBDBD
  font-size 200%
  height 32px
  margin 0px 0px 0px 5px
  padding 3px 3px 3px 3px
  border-radius 5px
  font-family 'Josefin Slab'

#beta button:active
  background #F5F6CE
 
#beta button:hover
  box-shadow 0px 0px 10px #FBFBEF

#beta input
  width 85%