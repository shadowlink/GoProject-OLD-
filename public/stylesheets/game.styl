#chatBar
  float left
  width 26%
  height 99%

#chatBox
  float left
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.5)
  border 1px solid #D8D8D8
  width 80%
  height 550px
  margin 25px 0px 0px 30px
  text-align left
  padding 5px 5px 5px 5px
  overflow auto
  box-shadow 0px 0px 10px #000000
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px
  font-size 140%
  
#inputChatBox
  float left
  width 86%
  margin 10px 0px 0px 30px
  text-align left

#inputChatBox input
  width 70%
  font-size 150%
  vertical-align middle
  -webkit-border-top-right-radius: 1px;
  -webkit-border-bottom-right-radius: 1px;
  -moz-border-radius-topright: 1px;
  -moz-border-radius-bottomright: 1px;
  border-top-right-radius: 1px;
  border-bottom-right-radius: 1px;
  
#inputChatBox button
  width 23%
  background white
  border-top-right-radius 5px
  border-bottom-right-radius 5px
  border 1px solid #D8D8D8
  height 32px
  vertical-align middle

#gameContent
  float left
  width 50%
  height 98%
  border none

#canvas
  margin 20px 0px 0px 50px
  background-image:url("../images/tablero.png")
  box-shadow 10px 10px 40px #000000
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px


#playersBar
  width 24%
  height 99%
  float left

.player
  padding 0px 0px 0px 0px
  border 1px solid #D8D8D8
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px
  width 100%
  height 120px
  margin 25px 0px 0px 0px
  float left
  box-shadow 0px 0px 10px #000000
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.3)

.player img
  width 80px 
  height 80px
  float left
  border 1px solid
  margin 0px 0px 0px 10px
  box-shadow 0px 0px 10px #000000

.playerName
  background-image:url("../images/playername_back.png")
  float left
  width 100%
  border-bottom 1px solid #F2F2F2
  text-align center
  margin 0px 0px 5px 0px
  -webkit-border-top-left-radius: 5px;
  -webkit-border-top-right-radius: 5px;
  -moz-border-radius-topleft: 5px;
  -moz-border-radius-topright: 5px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  color #D8D8D8

.points
  float left
  width 40px
  height 20px
  vertical-align middle
  margin 0px 0px 0px 85px
  text-align center
  padding 5px 0px 0px 0px
  font-size 500%

.time
  float left
  width 40px
  height 20px
  border 1px solid
  vertical-align middle
  margin 25px 0px 0px 30px
  text-align center
  padding 5px 0px 0px 0px

#viewers
  margin 25px 0px 0px 0px 
  width 100%
  height 295px
  float left

#players
  width 100%
  height 305px
  float left

#botonPass
  float left
  width 31%
  background white
  border-top-left-radius 5px
  border-bottom-left-radius 5px
  border 1px solid #D8D8D8
  height 32px
  vertical-align middle
  margin 0px 0px 0px 15px

#botonAbandon
  float left
  width 31%
  background white
  border-top 1px solid #D8D8D8
  border-bottom 1px solid #D8D8D8
  border-left none
  border-right none
  height 32px
  vertical-align middle

#botonExit
  float left
  width 31%
  background white
  border-top-right-radius 5px
  border-bottom-right-radius 5px
  border 1px solid #D8D8D8
  height 32px
  vertical-align middle