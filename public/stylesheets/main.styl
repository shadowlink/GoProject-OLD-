#mainContent
  float left
  position relative
  width 94.8%
  margin 30px 5px 0px 35px
  background white
  border 1px solid #848484
  height 650px
  border-radius 3px
  padding 5px 0px 5px 5px
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.3)
  box-shadow 0px 0px 20px #6E6E6E
  
#leftBar
  float left
  width 16%
  border-top 1px solid #848484
  border-bottom 1px solid #848484
  border-left 1px solid #848484
  height 650px
  border-top-left-radius 3px
  border-bottom-left-radius 3px
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.5)
  
#middleBar
  float left
  width 68%
  background white
  border-top 1px solid #848484
  border-bottom 1px solid #848484
  height 650px
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.0)
  
  
#rightBar
  float left
  width 15.4%
  border-top 1px solid #848484
  border-bottom 1px solid #848484
  border-right 1px solid #848484
  height 650px
  border-top-right-radius 3px
  border-bottom-right-radius 3px
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.5)
  text-align center
  
#userBox
  width 100%
  height 130px
  padding 5px 5px 5px 5px
  text-align center
  
#avatarBox
  float left
  width 100%

#avatarBox img
  width 100px
  height 100px
  border 1px solid #848484
  padding 1px 1px 1px 1px
  box-shadow 1px 1px 5px #BDBDBD
  
#dataBox
  float left
  width 100%
  padding 10px 0px 10px 20px
  font-size 150%
  text-aling left
  
#dataBox img
  width 70%
  
#lvlBox
  float left
  width 20%
  margin 0px 20px 0px 0px
  text-aling center
  
#winBox
  float left
  width 20%
  margin 0px 20px 0px 0px
  text-aling center

#lostBox
  float left
  width 20%
  text-aling center
 
#settingsBox
  float left
  width 100%
  border-bottom-left-radius 3px
  
.optionBox
  border-top: 1px solid #6E6E6E
  border-bottom 1px solid #BDBDBD
  text-align center
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.6)
  height 30px
  padding 10px 0px 0px 0px

.optionBox:hover
  background-image -webkit-linear-gradient(top, #D8D8D8 0, #F2F2F2 100%)

#gameContentBox
  float left
  border 1px solid #6E6E6E
  width 99.7%
  height 592px
  padding 5px 0px 0px 0px

.gameBox
  width 95%
  padding 2px 5px 2px 5px
  margin 5px 0px 0px 20px
  border-radius 3px
  float left
  background rgb(0, 0, 0)
  background rgba(255, 255, 255, 0.8)
  box-shadow 1px 1px 5px #BDBDBD

.gameBox button
  border none
  border-radius 2px
  padding 1px 1px 1px 1px
  background #ECF6CE

.gameBox button:active
  background #9AFE2E

.gameBox:hover
  background rgb(241, 248, 224)
  background rgba(241, 248, 224, 0.6)
  
.flagBox
  float left
  width 3%
  border-right 1px solid #848484
  padding 5px 0px 0px 0px

.flagBox img
  box-shadow 1px 1px 5px #BDBDBD
  
.titleGameBox
  float left
  width 70%
  padding 2px 0px 0px 10px

.settingsGameBox
  float left
  width 20%
  padding 2px 0px 0px 0px
  
.playBox
  float left
  width 5%
  text-align right
  padding 0px 0px 0px 7px

#searchBox
  width 100%
  text-align center
  background rgb(255, 255, 255)
  background rgba(255, 255, 255, 0.5)
  padding 10px 0px 10px 0px
  
#searchBox input
  width 300px
  border-top-left-radius 10px
  border-bottom-left-radius 10px
  border 1px solid #848484
  
#searchBox button
  height 32px
  width 100px
  font-size 240%
  background white
  border 1px solid #848484
  border-top-right-radius 10px
  border-bottom-right-radius 10px